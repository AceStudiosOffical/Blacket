{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "baseUrl": "./",
        "moduleResolution": "Node",
        "paths": {},
        "outDir": "./dist", 
        "rootDir": "./",
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}